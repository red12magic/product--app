@* starter code for c# html index file *@

@{
    ViewData["Title"] = "Login";
}

<div class="auth-container mx-auto" style="max-width: 468px;">
    <h1 class="auth-title text-center mb-4">Login</h1>
    <form class="auth-form mx-auto p-4 bg-light border rounded-lg shadow-sm" method="post" action="/login">
        <div class="form-group mb-3">
            <label for="Username" class="form-label">Username</label>
            <input id="Username" name="Username" class="form-control" required>
        </div>
        <div class="form-group mb-3">
            <label for="Password" class="form-label">Password</label>
            <input id="Password" name="Password" type="password" class="form-control" required>
        </div>
        <a class="btn btn-primary w-100 mt-3" asp-controller="Books" asp-action="Index">Login</a>
    </form>
    <div class="text-center mt-3">
        <p>Don't have an account? <a asp-controller="Register" asp-action="Index">Register</a></p>
    </div>
</div>
