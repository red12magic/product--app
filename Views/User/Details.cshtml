@{
}
@{
    var userIdString = Context.Session.GetString("UserId");

    int userId;

    int.TryParse(userIdString, out userId);

}


@{
}
<div class="d-flex"> 
    <h2>Name:@Model.Username </h2>
    @if (userId == Model.UserID)
    {
        <a asp-action="ChangePassword" asp-controller="User"  class="btn ms-2 btn-primary">Change Password</a>
    }
</div>
<h4>   Books  </h4>

@if (ViewBag.Books != null  )
{
    <ul>
        @foreach (Book book in ViewBag.Books )

        {
            if
               (Model.UserID == book.UserID)
            {
                
            
            <li>
                <strong> Books Name:</strong> @book.BookName <br />
                <strong>Price:</strong> @book.BookPrice <br />
                <strong>Author ID:</strong> @book.UserID <br/>
            </li>
        }}
    </ul>
}
else
{
    <p>No books available for this user.</p>
}
